<h1>Flickr Stream</h1>
<p>Enter a Flickr ID:</p>
<%= form_with url: "/search", method: :get do |form| %>
  <%= form.label :query, "flickr id:" %>
  <%= form.text_field :query %>
  <%= form.submit "Search" %> <br>
<% end %>

<%unless @list.nil?%>
  <% @list.each do |photo|%>
    <%= image_tag("https://live.staticflickr.com/#{photo.server}/#{photo.id}_#{photo.secret}.jpg") %> <br>
  <% end %>
<% end %>

